<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tim36.PocetnaActivity">

    <TextView
        android:id="@+id/textDobrodosli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobrodosli"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />

    <Button
        android:id="@+id/buttonIgraj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Igraj"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textDobrodosli"/>

    <Button
        android:id="@+id/buttonProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonIgraj"/>


</RelativeLayout>